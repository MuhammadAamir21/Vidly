@model IEnumerable<Vidly.ViewModels.UsersViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Users</h2>

@Html.ActionLink("Add Users", "MovieForm", "Movies", new { @class = "btn btn-primary" })
@Html.ActionLink("Add Roles", "MovieForm", "Movies", new { @class = "btn btn-primary" })

<table id="Users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@user.Username, "Edit", "Movies", new { id = user.UserId }, null)
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.Role
                </td>
            </tr>

        }
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {

            $("#Users").DataTable();

        });
    </script>
}