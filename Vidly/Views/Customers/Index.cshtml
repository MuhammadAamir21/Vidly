            $("#customers").DataTable({
                ajax: {
                    url: "api/customers",
                    dataSrc: "",
                },

                columns: [
                    {
                        data: "name",
                        //data,type,row
                        render: function (data, type, customer) {
                            return "<a href='/customers/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "id",
